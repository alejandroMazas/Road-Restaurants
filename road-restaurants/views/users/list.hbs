<div class="container">

    <div class="row">

        {{#each users}}

        <div class="col-6">

            <div class="row">

                <h1><a href="/users/details/{{_id}}"></a>{{username}}</h1>

                <figure><img src="{{image}}" alt="imagen"></figure>

                <div class="col-6">

                    <hr>
                    <form action="/users/details/{{_id}}/delete" method="POST">
                        <button class="btn btn-sm btn-warning" type="submit">Delete</button>
                    </form>

                </div>

            </div>


        </div>
        {{/each}}
    </div>

</div>