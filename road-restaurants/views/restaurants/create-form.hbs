        <div class="mb-3">
            <label for="name" class="form-label">Latitud</label>
            <input type="text" name="latitude" placeholder="latitud" value="{{location.coordinates.[0]}}">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Longitud</label>
            <input type="text" name="longitude" placeholder="longitud" value="{{location.coordinates.[1]}}">
        </div>


        <button type="submit" class="btn btn-primary">Crear Restaurante</button>
        </form>

    </div>

</div>

</div>

