<div class="container">

    <div class="row">



        {{#each users}}

        <div class="col-6">

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{image}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{username}}</h5>
                            <p class="card-text">{{bio}}</p>
                            <form action="/users/details/{{_id}}/delete" method="POST">
                                <button class="deleteButton2" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}

    </div>
</div>
</div>